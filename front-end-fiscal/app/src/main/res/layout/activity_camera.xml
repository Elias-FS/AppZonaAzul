<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wall"
    tools:context=".CameraActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tire foto dos 4 lados do carro"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Foto Frontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:outlineAmbientShadowColor="@color/watergreen"
                    android:id="@+id/ivFoto"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp">

                </androidx.appcompat.widget.AppCompatImageButton>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Foto Lateral Esquerda"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:outlineAmbientShadowColor="@color/watergreen"
                    android:id="@+id/ivFoto2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp">
                </androidx.appcompat.widget.AppCompatImageButton>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Foto Traseira"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:outlineAmbientShadowColor="@color/watergreen"
                    android:id="@+id/ivFoto3"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp">
                </androidx.appcompat.widget.AppCompatImageButton>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Foto Lateral Direita"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:outlineAmbientShadowColor="@color/watergreen"
                    android:id="@+id/ivFoto4"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp">
                </androidx.appcompat.widget.AppCompatImageButton>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>

    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Clique nos espaÃ§os a cima para tirar as fotos"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="15dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data e Hora:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvData"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="00:00"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnviarFoto"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:backgroundTint="@color/azul3"
            android:text="Enviar Fotos"/>


    </androidx.appcompat.widget.LinearLayoutCompat>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/btnNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/azul1"
            app:itemTextColor="@color/white"
            app:itemRippleColor="@color/white"
            app:itemIconTint="@color/white"
            app:menu="@menu/bottom_navigation_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.appcompat.widget.LinearLayoutCompat>